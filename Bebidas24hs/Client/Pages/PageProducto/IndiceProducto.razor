@page "/producto"
@inject IHttpService http
<h1>IndiceProducto</h1>

<a class="btn btn-primary" href="Producto/Create">New</a>
<br />
<table>
    <tr>
        <th>Id</th>

        <th>Precio</th>

        <th>Codigo</th>

        <th>Descripcion</th>

    </tr>
    @if (producto == null)
    {
        <tr>Cargando.....</tr>
    }
    else if (producto.Count == 0)
    {
        <tr>No existen productos</tr>
    }
    else
    {
        @foreach (var item in producto)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Precio</td>
                <td>@item.Codigo</td>
                <td>@item.Descripcion</td>
                <td>
                    <a class="btn btn-success"
                       href="producto/editar/@item.Id">
                        Editar
                    </a>
                </td>
                <td><button class="btn btn-warning" @onclick="()=>Eliminar(item)">Eliminar</button></td>
            </tr>
        }
    }
</table>

<Confirmacion @ref="confirmacion"
              onConfirm="GrabarEliminar"
              onCancel="Cancelar"
              Titulo="BORRAR"
              textCancelar="Salir"
              textOk="Aceptar">
    <div>¿Desea eliminar el producto @eliminarProducto.Id?</div>
</Confirmacion>


@code {
    List<
        Bebidas24hs.DataBase.Data.Entidades.Producto
     > producto;
    Confirmacion confirmacion;

    Bebidas24hs.DataBase.Data.Entidades.Producto eliminarProducto;

    string variableInventada = "";

    protected override async Task OnInitializedAsync()
    {
        base.OnInitialized();
        await Leer();
    }

    private async Task Leer()
    {    
        var respuestaHttp = await http.Get<List<Bebidas24hs.DataBase.Data.Entidades.Producto>>("Api/Producto");
      
        if (!respuestaHttp.Error)
        {
            producto = respuestaHttp.Respuesta;           
        }
    }


        private void Eliminar(Bebidas24hs.DataBase.Data.Entidades.Producto productoEliminar)
        {
            confirmacion.Mostrar();
            eliminarProducto = productoEliminar;
        }


        private async Task GrabarEliminar()
        {
            var respuesta = await http.Delete("Api/Producto/{eliminarProducto.Id}");
            if (respuesta.Error)

            {
                var body = await respuesta.GetBody();
            }
            Cancelar();
            await Leer();
        }

        private void Cancelar()
        {
            confirmacion.Ocultar();
            eliminarProducto = null;
        }
